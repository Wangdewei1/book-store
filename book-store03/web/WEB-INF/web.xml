<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
<!--    配置前缀 thymeleaf渲染-->
    <context-param>
        <param-name>view-prefix</param-name>
        <param-value>/WEB-INF/pages/</param-value>
    </context-param>
<!--    配置后缀-->
    <context-param>
        <param-name>view-suffix</param-name>
        <param-value>.html</param-value>
    </context-param>

<!--    首页 通过servlet thymeleaf渲染-->
    <servlet>
        <servlet-name>IndexServlet</servlet-name>
        <servlet-class>com.itwang.book.servlet.base.IndexServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>IndexServlet</servlet-name>
        <url-pattern>/index.html</url-pattern>
    </servlet-mapping>
<!--  UserServlet 用户服务 -->
    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>com.itwang.book.servlet.model.UserServlet</servlet-class>
    </servlet>
<!--   UserServlet 映射-->
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/UserServlet</url-pattern>
    </servlet-mapping>

<!--  BookServlet 图书服务 -->
    <servlet>
        <servlet-name>BookServlet</servlet-name>
        <servlet-class>com.itwang.book.servlet.model.BookServlet</servlet-class>
    </servlet>
<!--    BookServlet 映射-->
    <servlet-mapping>
        <servlet-name>BookServlet</servlet-name>
        <url-pattern>/BookServlet</url-pattern>
    </servlet-mapping>
<!--    配置 KaptchaServlet 验证码映射-->
    <servlet>
        <servlet-name>KaptchaServlet</servlet-name>
        <servlet-class>com.google.code.kaptcha.servlet.KaptchaServlet</servlet-class>
<!--        更改配置初始参数 验证码边框更改为不显示-->
        <init-param>
            <param-name>kaptcha.border</param-name>
            <param-value>no</param-value>
        </init-param>
<!--        更改为 验证码图片的宽度-->
        <init-param>
            <param-name>kaptcha.image.width</param-name>
            <param-value>150</param-value>
        </init-param>
<!--        更改 验证码图片的高度-->
        <init-param>
            <param-name>kaptcha.image.height</param-name>
            <param-value>50</param-value>
        </init-param>
<!--        更改 验证码边框 的 颜色配置-->
        <init-param>
            <param-name>kaptcha.border.color</param-name>
            <param-value>blue</param-value>
        </init-param>
<!--        更改 验证码 颜色字体 初始值-->
        <init-param>
            <param-name>kaptcha.textproducer.font.color</param-name>
            <param-value>blue</param-value>
        </init-param>
    </servlet>
<!--    映射-->
    <servlet-mapping>
        <servlet-name>KaptchaServlet</servlet-name>
        <url-pattern>/KaptchaServlet</url-pattern>
    </servlet-mapping>
</web-app>